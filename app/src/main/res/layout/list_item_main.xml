<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="@dimen/list_item_main_vertical_padding"
	android:paddingRight="@dimen/list_item_main_vertical_padding"
	android:paddingBottom="@dimen/list_item_main_horizontal_padding"
	android:paddingTop="@dimen/list_item_main_horizontal_padding">

	<android.support.v7.widget.CardView
		android:id="@+id/main_card_view"
		android:layout_gravity="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/main_image_view"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_centerInParent="true"
				android:background="@color/cardview_dark_background"/>

			<TextView
				android:id="@+id/main_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:padding="@dimen/list_item_main_text_padding"
				style="@style/MainTitleTextView"/>

		</RelativeLayout>
	</android.support.v7.widget.CardView>

</LinearLayout>